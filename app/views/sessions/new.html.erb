<% provide(:title, "Ingresar") %>
<h1>Inicia sesión</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :Matrícula %>
        <%= f.text_field :matricula, class: 'form-control' %>

        <%= f.label :Contraseña %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Recordarme en esta computadora</span>
        <% end %>

        <%= f.submit "Ingresar", class: "btn btn-primary" %>
        <% end %>

        <!--<p>¿Nuevo usuario? <%= link_to "Registrarse", signup_path %></p>-->
    </div>
</div>