<% provide(:title, @user.matricula) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.departamento %><p></p>
        <%= @user.matricula.capitalize %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.eventos.any? %>
      <h3>Eventos creados (<%= @user.eventos.count %>)</h3>
      <ol class="microposts">
        <%= render @eventos %>
      </ol>
      <%= will_paginate @eventos %>
    <% end %>
  </div>
</div>
