<% provide(:title, "Editar usuario") %>
<h1>Actualiza tu perfil</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :Usuario %>
      <%= f.text_field :matricula, class: 'form-control' %>

      <%= f.label :Contraseña %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmación" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :Departamento %>
      <%= f.select :departamento, ['Cultura', 'Centro de Vida y Carrera', 'Programas Internacionales']%>

      <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>
